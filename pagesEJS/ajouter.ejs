<div class="ajouter-usager-wrapper">
  <%- include ('./partiels/erreurs_msg') %>
  <h4 class="text-center">Ajouter un usager</h4>
  <form action="/usagers/ajouter" method="POST" enctype="multipart/form-data">
    <div class="form-wrapper usager-ajouter-form-wrapper">
      <div class="form-group">
        <input
          type="text"
          class="form-control"
          name="nom"
          id="nom"
          aria-describedby="emailHelp"
          placeholder="nom"
          value="<%= typeof nom != 'undefined' ? nom : '' %>"
          class="ajouter-usager-input"
        />
        <input
          type="email"
          class="form-control"
          name="login"
          id="login"
          aria-describedby="emailHelp"
          placeholder="Login"
          value="<%= typeof login != 'undefined' ? login : '' %>"
          class="ajouter-usager-input"
        />
      </div>
      <div class="form-group">
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Mot de passe"
          value="<%= typeof password != 'undefined' ? password : '' %>"
          class="ajouter-usager-input"
        />
        <input
          type="password"
          class="form-control"
          name="password2"
          id="password2"
          placeholder="Confirmez le mot de passe"
          value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          class="ajouter-usager-input"
        />
      </div>
      <div class="form-group">
        <label class="usager-ajouter-label">RÃ´les</label>
        <div class="usager-ajouter-checkbox-container">
          <div class="form-check usager-ajouter-roles form-check-inline">
            <input
              type="checkbox"
              class="form-check-input"
              id="normal"
              checked
              disabled
            />
            <label
              class="form-check-label usager-ajouter-label-gris"
              for="client"
              >Client</label
            >
          </div>
          <div class="form-check usager-ajouter-roles form-check-inline">
            <input type="checkbox" class="form-check-input" id="admin"
            name="admin" <%= typeof admin != 'undefined' ? 'checked' : '' %> />
            <label class="form-check-label" for="admin">Admin</label>
          </div>
          <div class="form-check usager-ajouter-roles form-check-inline">
            <input type="checkbox" class="form-check-input" id="gestion"
            name="gestion" <%= typeof gestion != 'undefined' ? 'checked' : '' %>
            />
            <label class="form-check-label" for="gestion">Vendeur</label>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-success">Ajouter l'usager</button>
    </div>
  </form>
</div>
