<div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="text-center">Cart Page</h1>
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th scope="col">Image</th>
              <th scope="col">Nom</th>
              <th scope="col">Prix</th>
              <th scope="col">Marque</th>
              <th scope="col">Quantité</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% produits.forEach(function(produit) { %>
              <tr>
                <td class="w-25">
                  <img
                    src="<%= produit.image %>"
                    class="img-fluid img-thumbnail"
                    alt="Image produit"
                  />
                </td>
                <th scope="row"><%= produit.nom %></th>
                <td><%= produit.prix %></td>
                <td><%= produit.marque %></td>
                <td>
                  <input type="number" class="form-control" value="<%= produit.quantite %>" min="1">
                </td>
                <td>
                  <button class="btn btn-danger">Supprimer</button>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
        <div class="text-center">
          <a href="/products" class="btn btn-primary">Continuer les achats</a>
          <a href="/checkout" class="btn btn-success">Passer à la caisse</a>
        </div>
      </div>
    </div>
  </div>