<%- include ('./partiels/erreurs_msg') %>
<h1 class="text-center">Modifier un usager</h1>

<form action="/usagers/editer" method="POST" enctype="multipart/form-data">
  <div class="form-wrapper">
    <div class="form-group">
      <label for="id">Id</label>
      <input
        type="text"
        name="id"
        id="id"
        value="<%=usager.id%>"
        readonly
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label for="login">Login</label>
      <input
        type="text"
        name="login"
        id="login"
        value="<%= typeof login != 'undefined' ? login : '' %>"
        placeholder="<%=usager.login%>"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label for="nom">Nom</label>
      <input
        type="text"
        class="form-control"
        id="nom"
        name="nom"
        placeholder="<%=usager.nom%>"
        value="<%= typeof nom != 'undefined' ? nom : '' %>"
      />
    </div>
    <div class="checkbox-wrapper">
      <div class="form-check">
        <label class="form-check-label" for="normal">Normal</label>
        <input
          type="checkbox"
          class="form-check-input"
          id="normal"
          checked
          disabled
        />
      </div>
      <div class="form-check">
        <label class="form-check-label" for="admin">Admin</label>
        <input type="checkbox" class="form-check-input" id="admin"
        name="admin"<% if (usager.role.includes('admin')) { %> checked <% } %>
        <%= typeof admin != 'undefined' ? 'checked' : '' %> />
      </div>
      <div class="form-check">
        <label class="form-check-label" for="gestion">Gestion</label>
        <input type="checkbox" class="form-check-input" id="gestion"
        name="gestion" <% if (usager.role.includes('gestion')) { %> checked <% }
        %> <%= typeof gestion != 'undefined' ? 'checked' : '' %> />
      </div>
    </div>
    <label for="fichier">Téléverser votre image: </label>
    <input
      type="file"
      name="fichier"
      id="fichier"
      class="form-control"
      required
    />
    <button type="submit" class="btn btn-primary">
      Modifier l'utilisateur
    </button>
  </div>
</form>
