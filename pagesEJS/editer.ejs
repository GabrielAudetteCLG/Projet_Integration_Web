<div class="usager-editer-container">
  <%- include ('./partiels/erreurs_msg') %> <%- include
  ('./partiels/erreurs_msg') %>
  <h4 class="text-center">Modifier un usager</h4>

  <form
    action="/usagers/editer/<%=usager.id%>"
    method="POST"
    enctype="multipart/form-data"
  >
    <div class="form-wrapper">
      <div class="form-group">
        <label for="id">Id</label>
        <input
          type="text"
          name="id"
          id="id"
          value="<%=usager.id%>"
          readonly
          class="form-control"
        />
      </div>
      <div class="form-group">
        <label for="login">Login</label>
        <input
          type="text"
          name="login"
          id="login"
          value="<%= typeof login != 'undefined' ? login : '' %>"
          placeholder="<%=usager.login%>"
          class="form-control"
        />
      </div>
      <div class="form-group">
        <label for="nom">Nom</label>
        <input
          type="text"
          class="form-control"
          id="nom"
          name="nom"
          placeholder="<%=usager.nom%>"
          value="<%= typeof nom != 'undefined' ? nom : '' %>"
        />
      </div>

      <div class="checkbox-wrapper">
        <div class="form-check">
          <label class="form-check-label" for="client">Client</label>
          <input
            type="checkbox"
            class="form-check-input"
            id="client"
            checked
            disabled
          />
        </div>
        <div class="form-check">
          <label class="form-check-label" for="admin">Admin</label>
          <input type="checkbox" class="form-check-input" id="admin"
          name="admin"<% if (usager.role.includes('admin')) { %> checked <% } %>
          <%= typeof admin != 'undefined' ? 'checked' : '' %> />
        </div>
        <div class="form-check">
          <label class="form-check-label" for="vendeur">Vendeur</label>
          <input type="checkbox" class="form-check-input" id="vendeur"
          name="vendeur" <% if (usager.role.includes('vendeur')) { %> checked <%
          } %> <%= typeof vendeur != 'undefined' ? 'checked' : '' %> />
        </div>
      </div>
      <button type="submit" class="btn btn-success">
        Modifier l'utilisateur
      </button>
    </div>
  </form>
</div>
